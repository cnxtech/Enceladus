:host {
  contain: content;
  display: block;
}

h1 {
  font-size: 1.4rem;
  line-height: 1.4;

  margin-block: 0 0.3rem;
}

div {
  margin: logical * * 0.5rem 0.5rem;

  &:not(:first-of-type) {
    margin-block-start: 0.5rem;
  }
}

p {
  line-height: 1.3;
  margin: 0;

  &:not(:first-of-type) {
    margin-block-start: 0.6rem;
  }

  &:last-of-type {
    margin-block-end: 1rem;
  }
}
